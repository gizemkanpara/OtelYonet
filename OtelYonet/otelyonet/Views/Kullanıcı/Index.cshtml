@model IEnumerable<otelyonet.Models.Kullanıcı>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EPosta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sifre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EPosta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sifre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol.RolAdı)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KullanıcıID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KullanıcıID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KullanıcıID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
